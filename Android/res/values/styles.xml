<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- MainColorLayouts -->
    <style name= "mainColorScheme" >
        <item name= "android:background">@color/Olive</item>
        <item name= "android:button">@style/textButton</item>
        <item name= "android:textAppearanceListItem">@style/textYellow</item>
        <item name= "android:textColor">@style/textLime</item>    </style>
        
    
    
    <!-- ButtonStyle -->
    <style name= "textButton" parent= "@android:style/TextAppearance">
        <item name= "android:textSize">20sp</item>
        <item name= "android:typeface">sans</item>
        <item name= "android:background">@drawable/ic_launcher</item>
    </style>
    
    
    
    <!-- TextStyles -->
    <style name= "textLime" parent= "@android:style/TextAppearance">
        <item name= "android:textSize">30sp</item>
        <item name= "android:typeface">sans</item>
        <item name= "android:textColor">@color/Olive</item>
    </style>
        
    <style name= "textYellow" parent= "@android:style/TextAppearance">
        <item name= "android:textSize">20sp</item>
        <item name= "android:typeface">sans</item>
        <item name= "android:textColor">@color/OliveDrab</item>
    </style>
  
    
</resources>